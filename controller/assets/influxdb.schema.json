{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "influxdb.schema.json",
    "title": "InfluxDB Config Schema",
    "description": "Schema for optinal InfluxDB config",
    "type": "object",
    "properties": {
        "database": {
            "type": "string"
        },
        "series_name": {
            "type": "string"
        },
        "host": {
            "type": "string"
        },
        "port": {
            "type": "number"
        },
        "user": {
            "type": "string"
        },
        "password": {
            "type": "string"
        },
        "timeout": {
            "type": "number"
        },
        "retries": {
            "type": "number"
        }
    },
    "required": [
        "database"
    ],
    "additionalItems": false
}
