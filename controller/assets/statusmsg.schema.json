{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "statusmsg.schema.json",
    "title": "VM Status Message",
    "description": "Downstream status message: VM to management server",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "status": {
            "type": "string",
            "enum": [
                "started",
                "initialized",
                "msg_success",
                "msg_info",
                "msg_error",
                "exp_done",
                "exp_failed",
                "failed"
            ]
        },
        "message": {
            "type": [
                "string",
                "null"
            ]
        }
    },
    "required": [
        "name",
        "status"
    ],
    "additionalItems": false
}
