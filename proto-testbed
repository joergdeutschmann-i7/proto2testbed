# Resolve symlinks by passing $0 to realpath
SCRIPT=$(realpath "$0")
REPO_BASE=$(dirname "$SCRIPT")

CALLER_SCRIPT=$(basename "$0")
export CALLER_SCRIPT

while true; do
    python3 $REPO_BASE/controller/main.py ${@:1}
    exit_code=$?

    if [ $exit_code -ne 254 ]; then
        exit $exit_code
    fi
done
