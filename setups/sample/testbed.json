{
    "settings": {
        "machines_internet_access": true,
        "management_network": "172.16.99.0/24",
        "diskimage_basepath": "/images/"
    },
    "networks": [
        {
            "name": "exp0",
            "physical_ports": []
        }
    ],
    "integration": {
        "mode": "await",
        "invoke_after": "startup",
        "settings": {
            "start_script": "integration/oneshot.sh",
            "wait_for_exit": 120
        } 
    },
    "machines": [
        {
            "name": "vma",
            "diskimage": "debian-test.qcow2",
            "setup_script": "vma/setup.sh",
            "environment": {
                "VARIABLE": "Hello from VM A Setup!"
            },
            "cores": 2,
            "memory": 1024,
            "networks": [
                "exp0"
            ],
            "applications": [
                {
                    "application": "iperf3-server",
                    "name": "vma-iperf-server",
                    "delay": 0,
                    "runtime": 100,
                    "settings": {}
                },
                {
                    "application": "procmon",
                    "name": "procmon-vma",
                    "delay": 5,
                    "runtime": 60,
                    "settings": {
                        "interfaces": ["enp0s3"],
                        "system": true
                    }
                }
            ]
        },
        {
            "name": "vmb",
            "diskimage": "debian-test.qcow2",
            "setup_script": "vmb/setup.sh",
            "environment": {
                "VARIABLE": "Hello from VM B Setup!"
            },
            "cores": 2,
            "memory": 1024,
            "networks": [
                "exp0"
            ],
            "applications": [
                {
                    "application": "iperf3-client",
                    "name": "vmb-iperf-client",
                    "delay": 1,
                    "runtime": 60,
                    "settings": {
                        "host": "10.0.0.1"
                    }
                },
                {
                    "application": "procmon",
                    "name": "procmon-vmb",
                    "delay": 5,
                    "runtime": 60,
                    "settings": {
                        "interfaces": ["enp0s3"],
                        "system": true
                    }
                }
            ]
        }
    ]
}